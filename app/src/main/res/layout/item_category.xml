<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="categoryWithStats"
            type="com.example.teacher.ui.categories.CategoriesViewModel.CategoryWithStats" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_width="200dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            app:cardBackgroundColor="?attr/colorPrimary"
            app:cardCornerRadius="16dp"
            app:contentPadding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="@{categoryWithStats.percentage}"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="22sp"
                tools:text="15%" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@{categoryWithStats.category}"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="28sp"
                tools:text="Some category" />
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
