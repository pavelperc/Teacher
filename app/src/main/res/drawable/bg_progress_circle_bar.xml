<?xml version="1.0" encoding="utf-8"?>

<!--    https://stackoverflow.com/questions/21333866/how-to-create-a-circular-progressbar-in-android-which-rotates-on-it-->
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:toDegrees="0">
    <shape
        android:innerRadiusRatio="2.5"
        android:shape="ring"
        android:thickness="@dimen/progress_circle_thickness"
        android:useLevel="true"><!-- this line fixes the issue for lollipop api 21 -->

        <gradient
            android:angle="0"
            android:endColor="@color/dark_green"
            android:startColor="@color/dark_green"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>